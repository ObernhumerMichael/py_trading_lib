import os

import pandas as pd


class HistoricData:
    def get_from_file(self, path: str) -> pd.DataFrame:
        self._does_file_exist_on(path)
        self._is_file_csv_on(path)
        raise NotImplementedError

    def _does_file_exist_on(self, path: str):
        if not os.path.exists(path):
            raise FileNotFoundError(f"The file on the path: {path} does not exist.")

    def _is_file_csv_on(self, path: str):
        if not path.endswith(".csv"):
            raise ValueError(f"The file one {path} is not a CSV file.")
